html
	head
		title Project Image | Login
		script(src='js/jquery.js')
		script(src='js/materialize.js')
		link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
		link(rel='stylesheet', href='css/materialize.css')
		link(rel='stylesheet', href='css/style.css')
		meta(name="viewport" content="width=device-width, initial-scale=1.0") 
body.lime
.row
	.col.s12.m8.l6.offset-m2.offset-l3
		.card
			.card-content.grey-text
				span.card-title Login
				|                
				.row
					form.col.s12
						.row
							.input-field.col.s12
								i.material-icons.prefix account_circle
								|           
								input#icon_prefix.validate(type='text', value="")
								|           
								label(for='icon_prefix') User Name
							|         
							.input-field.col.s12
								i.material-icons.prefix vpn_key
								|           
								input#icon_password.validate(type='text', value="")
								|           
								label(for='icon_password') Password
			|             
			.card-action
			button.btn-flat.grey.waves-effect.waves-light.spaced(type='reset', name='action')
				| Clear
				i.material-icons.right clear
				|               
				button.btn-flat.lime.waves-effect.waves-light(type='submit', name='action')
					| Login
					i.material-icons.right send
