html
	head
		title Project Image | Login
		script(src='js/jquery.js')
		script(src='js/materialize.js')
		link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
		link(rel='stylesheet', href='css/materialize.css')
		link(rel='stylesheet', href='css/style.css')
		link(rel='icon', href='favicon.ico', type='image/ico', sizes='128x128')
		meta(name="viewport" content="width=device-width, initial-scale=1.0") 
body.lime
.row
	div#log.col.s12.m8.l6.offset-m2.offset-l3
		.card
			.card-content.grey-text
				span.card-title Login
				|                
				.row
					form.col.s12(name='', action='public/js/', method='POST')
						.row
							.input-field.col.s12
								i.material-icons.prefix account_circle
								|           
								input#icon_prefix.validate(type='text', value="", required)
								|           
								label(for='icon_prefix') User Name
							|         
							.input-field.col.s12
								i.material-icons.prefix vpn_key
								|           
								input#icon_password.validate(type='text', value="", required)
								|           
								label(for='icon_password') Password
							.input-field.col.s6
								p
									input#test5(type='checkbox')
									|       
									label(for='test5') Remember me!
						button.btn.lime.waves-effect.waves-light.right(type='submit', name='action')
							| Login
			.card-action.grey.lighten-2
				a.grey-text(href='#') Forgot Password?
				a.grey-text.right(href='#') SignUp?
